#!/bin/bash

## Files and cmd
FILE="$HOME/.cache/ewwsystray.xyz"
EWW_BIN="$HOME/.local/bin/eww"

## Run eww daemon if not running already
if [[ ! `pidof eww` ]]; then
	${EWW_BIN} daemon
	sleep 1
fi

## Open widgets 
run_eww() {
	${EWW_BIN} -c $HOME/.config/eww/systray open \
		settings-panel 
}

close_eww() {
	${EWW_BIN} -c $HOME/.config/eww/systray close \
		settings-panel 
}

## Launch or close widgets accordingly
if [[ ! -f "$FILE" ]]; then
	touch "$FILE"
	run_eww
else
	close_eww
	rm "$FILE"
fi
